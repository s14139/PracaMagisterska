@{
    ViewBag.Title = "KO Index";
}

<h2>Index</h2>


<form data-bind="submit: addWorkout">
    <input id="datepicker" data-bind="value: workoutDate" placeholder="Date" />
    <input data-bind="value: workoutLength" type="number" placeholder="Workout Length" />
    <select data-bind="options: locations, value: location, optionsText: 'Name'"></select>
    <button class="btn btn-primary" type="submit">Add</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Workout Date
            </th>
            <th>
                Workout Length
            </th>
            <th>
                Location
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody data-bind="foreach: Workouts">
        <tr>
            <td data-bind="text: WorkoutDate"></td>
            <td data-bind="text: WorkoutLength"></td>
            <td data-bind="text: Location.Name"></td>
        </tr>
    </tbody>
</table>
@section Scripts {
    @Scripts.Render("~/Scripts/ViewModels/IndexKOVM.js")
}