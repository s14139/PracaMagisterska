@{
    ViewBag.Title = "NG Index";
}
@section Scripts {
    @Scripts.Render("~/Scripts/angular/scope.js")
}
<div id="indexNgBody" ng-app="workoutApp">
    <h2>Workouts</h2>
    <div ng-controller="workoutController">
        <form>
            <input placeholder="Name" ng-model="name" />
            <input type="text" placeholder="Date" ng-model="workoutDate" mydatepicker />
            <input type="number" placeholder="Workout Length" ng-model="workoutLength" />
            <select ng-model="location" ng-options="loc.Id as loc.Name for loc in locations"></select>
            <button class="btn btn-primary" ng-click="addWorkout()">Add</button>
        </form>
        <table class="table table-hover">
            <thead class="thead-inverse">
                <tr>
                    <th>
                        Workout Name
                    </th>
                    <th>
                        Workout Date
                    </th>
                    <th>
                        Workout Length
                    </th>
                    <th>
                        Location
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="workout in workouts">
                    <td>
                        <input placeholder="Name" ng-model="workout.Name" />
                    </td>
                    <td>
                        <input class="datepicker" placeholder="Date" ng-model="workout.WorkoutDate" />
                    </td>
                    <td>
                        <input type="number" placeholder="Workout Length" ng-model="workout.WorkoutLength" />
                    </td>
                    <td>
                        <select ng-options="loc.Id as loc.Name for loc in $parent.locations"  ng-model="workout.Location"></select>
                    </td>
                    <td>
                        <button class="btn btn-primary">Save</button>
                    </td>
                </tr>
            </tbody>
        </table>

    <h3>Exercises</h3>
    <form>
        <select ng-options="exc.Id as exc.Name for exc in exercises"  ng-model="exercise"></select>
        <select ng-options="equ.Id as equ.Name for equ in equipments"  ng-model="equipment"></select>
        <button class="btn btn-primary" type="submit">Add</button>
    </form>
    <div>
        <table class="table table-hover">
            <thead class="thead-inverse">
                <tr>
                    <th>
                        Exercise
                    </th>
                    <th>
                        Equipment
                    </th>
                    <th>
                        NumberOfSets
                    </th>
                    <th>
                        Total Weight
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <select ng-options="exc.Id as exc.Name for exc in $parent.exercises"  ng-model="workout.Exercise"></select>
                    </td>
                    <td>
                        <select ng-options="equ.Id as equ.Name for equ in $parent.equipments"  ng-model="workout.Equipment"></select>
                    </td>
                    <td>
                        <span></span>
                    </td>
                    <td>
                        <span></span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <h4>Sets</h4>
    <form>
        <input placeholder="Weight" />
        <input placeholder="Reps" />
        <button class="btn btn-primary" type="submit">Add</button>
    </form>
        <table class="table">
            <thead class="thead-inverse">
                <tr>
                    <th>
                        Weight
                    </th>
                    <th>
                        Repetitions
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input type="number" placeholder="Weight" />
                    </td>
                    <td>
                        <input type="number" placeholder="Repetitions" />
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

</div>
